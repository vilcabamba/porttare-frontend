ion-view(
  view-title="Login",
  hide-nav-bar="true"
)
  ion-content.login-form
    back-button
    .row
      .moviggo-logo-1
    .row.width-constraint
      form(ng-submit='loginVm.login()')
        .list
          label.item.item-input.with-icon
            span.email-left-icon
            input(
              type='email',
              ng-model='loginVm.loginForm.email'
              required='required'
              placeholder='{{::("login.email"|translate)}}'
            )
          label.item.item-input.with-icon
            span.lock-left-icon
            input(
              type='password',
              ng-model='loginVm.loginForm.password',
              required='required',
              placeholder='{{::("login.password"|translate)}}'
            )
        .button-actions
          input(
            type='submit',
            value='{{::("login.login"|translate)}}'
          ).button.button-primary.button-block
    .row.width-constraint
      a.button.button-clear.button-link(ui-sref='send') {{::("login.forgotPassword"|translate)}}
    .row.width-constraint
      .button.facebook-login(ng-click="loginVm.loginWithFB()")
        span.fb-left-icon
        span.fb-copytext {{::("login.continueWithFacebook"|translate)}}

.bar.bar-footer.bar-footer-yellow-stripe
