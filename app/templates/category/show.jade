ion-view(
  view-title="{{:: categoryVm.category.titulo}}"
)
  ion-nav-title
    .alt-logo
  ion-content(class="category-page",
    style="background-image: url('{{categoryVm.category.imagen|defaultImage}}')"
  )
    .category-title {{categoryVm.category.titulo | uppercase}}
    .category-description {{categoryVm.category.descripcion}}
    slick(settings="categoryVm.slickConfig")
      .slick-container(ng-repeat="provider in categoryVm.providers")
        .slick-content(ui-sref='app.categories.provider({category_id: categoryVm.category.id, id: provider.id })')
          .provider-card
            .img(style="background-image: url('{{provider.imagen|defaultImage:'../images/ionic.png'}}')")
            .provider-card-footer
              .nombre {{provider.nombre_establecimiento}}
              .horario {{provider.horario}}
